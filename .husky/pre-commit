#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🎨 Running Prettier formatting..."
pnpm format

if ! git diff --exit-code --quiet; then
  echo "📝 Auto-staging formatting changes..."
  git add .
fi

echo "🔄 Generating code..."
pnpm codegen

echo "🔄 Building..."
pnpm build

# Run tests
echo "🧪 Running tests..."
pnpm test
